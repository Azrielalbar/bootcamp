<div style="text-align: center;">
    <h1><%= title %></h1>

    <h2>Contact List</h2>
    <table style="width: 100%; border-collapse: collapse; margin-top: 20px;">
        <thead>
            <tr>
                <th style="background-color: #0071e3; color: white; padding: 10px;">Name</th>
                <th style="background-color: #0071e3; color: white; padding: 10px;">Email</th>
                <th style="background-color: #0071e3; color: white; padding: 10px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            <% contacts.forEach(contact => { %>
                <tr>
                    <td style="border: 1px solid #ccc; padding: 10px; text-align: center;"><%= contact.name %></td>
                    <td style="border: 1px solid #ccc; padding: 10px; text-align: center;"><%= contact.email %></td>
                    <td style="border: 1px solid #ccc; padding: 10px; text-align: center;">
                        <button onclick="viewDetails('<%= contact.id %>')" style="background-color: #0071e3; color: white; border: none; padding: 8px 12px; border-radius: 4px; cursor: pointer; margin-right: 5px;">Details</button>
                        <button onclick="openUpdateModal('<%= contact.id %>', '<%= contact.name %>', '<%= contact.email %>')" style="background-color: #f1c40f; color: white; border: none; padding: 8px 12px; border-radius: 4px; cursor: pointer; margin-right: 5px;">Update</button>
                        <button onclick="openDeleteModal('<%= contact.id %>')" style="background-color: #e74c3c; color: white; border: none; padding: 8px 12px; border-radius: 4px; cursor: pointer;">Delete</button>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>

    <!-- Button to Add Data -->
    <button class="add-button" id="addDataBtn" style="position: fixed; bottom: 30px; right: 30px; margin: 20px; background-color: #0071e3; color: white; border: none; border-radius: 50%; width: 60px; height: 60px; font-size: 24px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); cursor: pointer; transition: background-color 0.3s;">+</button>

    <!-- Modal for Adding Data -->
    <div id="dataModal" class="modal" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.5); justify-content: center; align-items: center;">
        <div class="modal-content" style="background-color: white; padding: 30px; border-radius: 8px; box-shadow: 0 2px 15px rgba(0, 0, 0, 0.3); width: 400px; transition: transform 0.3s; animation: fadeIn 0.5s;">
            <span class="close" id="closeModal" style="cursor: pointer; color: #aaa; float: right; font-size: 28px;">&times;</span>
            <h2 style="text-align: center; color: #333;">Add New Contact</h2>
            <form id="contactForm" method="POST" action="/contact/add">
                <input type="text" name="name" placeholder="Name" required style="width: 100%; padding: 10px; margin-bottom: 10px; border-radius: 4px; border: 1px solid #ccc;">
                <input type="email" name="email" placeholder="Email" required style="width: 100%; padding: 10px; margin-bottom: 20px; border-radius: 4px; border: 1px solid #ccc;">
                <button type="submit" style="width: 100%; padding: 12px; background-color: #0071e3; color: white; border: none; border-radius: 4px; cursor: pointer;">Submit</button>
            </form>
        </div>
    </div>

    <!-- Modal for Updating Data -->
    <div id="updateModal" class="modal" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.5); justify-content: center; align-items: center;">
        <div class="modal-content" style="background-color: white; padding: 30px; border-radius: 8px; box-shadow: 0 2px 15px rgba(0, 0, 0, 0.3); width: 400px; transition: transform 0.3s; animation: fadeIn 0.5s;">
            <span class="close" id="closeUpdateModal" style="cursor: pointer; color: #aaa; float: right; font-size: 28px;">&times;</span>
            <h2 style="text-align: center; color: #333;">Update Contact</h2>
            <form id="updateContactForm" method="POST">
                <input type="hidden" name="id" id="updateContactId">
                <input type="text" name="name" id="updateContactName" placeholder="Name" required style="width: 100%; padding: 10px; margin-bottom: 10px; border-radius: 4px; border: 1px solid #ccc;">
                <input type="email" name="email" id="updateContactEmail" placeholder="Email" required style="width: 100%; padding: 10px; margin-bottom: 20px; border-radius: 4px; border: 1px solid #ccc;">
                <button type="submit" style="width: 100%; padding: 12px; background-color: #0071e3; color: white; border: none; border-radius: 4px; cursor: pointer;">Update</button>
            </form>
        </div>
    </div>

    <!-- Modal for Confirming Delete -->
    <div id="deleteModal" class="modal" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.5); justify-content: center; align-items: center;">
        <div class="modal-content" style="background-color: white; padding: 30px; border-radius: 8px; box-shadow: 0 2px 15px rgba(0, 0, 0, 0.3); width: 400px; transition: transform 0.3s; animation: fadeIn 0.5s;">
            <span class="close" id="closeDeleteModal" style="cursor: pointer; color: #aaa; float: right; font-size: 28px;">&times;</span>
            <h2 style="text-align: center; color: #333;">Confirm Delete</h2>
            <p id="deleteConfirmationMessage" style="text-align: center;">Are you sure you want to delete this contact?</p>
            <button id="confirmDeleteBtn" style="width: 100%; padding: 12px; background-color: #e74c3c; color: white; border: none; border-radius: 4px; cursor: pointer;">Delete</button>
        </div>
    </div>

    <script>
        // Show modal on button click
        document.getElementById('addDataBtn').addEventListener('click', function() {
            document.getElementById('dataModal').style.display = 'flex';
        });

        // Hide modal on close button click
        document.getElementById('closeModal').addEventListener('click', function() {
            document.getElementById('dataModal').style.display = 'none';
        });

        document.getElementById('closeUpdateModal').addEventListener('click', function() {
            document.getElementById('updateModal').style.display = 'none';
        });

        document.getElementById('closeDeleteModal').addEventListener('click', function() {
            document.getElementById('deleteModal').style.display = 'none';
        });

        let contactToDeleteId;

        function openDeleteModal(contactId) {
            contactToDeleteId = contactId; // Simpan ID kontak yang akan dihapus
            document.getElementById('deleteModal').style.display = 'flex';
        }

        document.getElementById('confirmDeleteBtn').addEventListener('click', function() {
            if (contactToDeleteId) {
                fetch(`/contact/delete/${contactToDeleteId}`, { method: 'DELETE' })
                .then(response => response.text())
                .then(data => {
                    alert(data);
                    window.location.reload(); // Reload halaman setelah penghapusan
                })
                .catch(err => console.error(err));
            }
        });

        function openUpdateModal(id, name, email) {
            document.getElementById('updateContactId').value = id;
            document.getElementById('updateContactName').value = name;
            document.getElementById('updateContactEmail').value = email;
            document.getElementById('updateModal').style.display = 'flex';
        }

        document.getElementById('updateContactForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const id = document.getElementById('updateContactId').value;
            const name = document.getElementById('updateContactName').value;
            const email = document.getElementById('updateContactEmail').value;

            fetch(`/contact/update/${id}`, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ name, email }),
            })
            .then(response => response.text())
            .then(data => {
                alert(data);
                window.location.reload(); // Reload halaman setelah pembaruan
            })
            .catch(err => console.error(err));
        });

        function viewDetails(contactId) {
            // Proses untuk melihat detail kontak bisa ditambahkan di sini
            alert(`Details for contact ID: ${contactId}`);
        }
    </script>
</div>

<!-- Tambahkan notifikasi di dalam body -->
<div id="notification" style="display: none; position: fixed; top: 20px; right: 20px; background-color: #0071e3; color: white; padding: 10px; border-radius: 5px; z-index: 1000;">Action successful!</div>

<script>
    // Fungsi untuk menampilkan notifikasi
    function showNotification(message) {
        const notification = document.getElementById('notification');
        notification.innerText = message;
        notification.style.display = 'block';
        setTimeout(() => {
            notification.style.display = 'none';
        }, 3000);
    }

    // Update bagian ini untuk menampilkan notifikasi
    document.getElementById('confirmDeleteBtn').addEventListener('click', function() {
        if (contactToDeleteId) {
            fetch(`/contact/delete/${contactToDeleteId}`, { method: 'DELETE' })
            .then(response => response.text())
            .then(data => {
                showNotification(data); // Tampilkan notifikasi
                window.location.reload(); // Reload halaman setelah penghapusan
            })
            .catch(err => console.error(err));
        }
    });

    document.getElementById('updateContactForm').addEventListener('submit', function(e) {
        e.preventDefault();
        const id = document.getElementById('updateContactId').value;
        const name = document.getElementById('updateContactName').value;
        const email = document.getElementById('updateContactEmail').value;

        fetch(`/contact/update/${id}`, {
            method: 'POST', // Ganti dengan POST
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ name, email }),
        })
        .then(response => response.text())
        .then(data => {
            showNotification(data); // Tampilkan notifikasi
            window.location.reload(); // Reload halaman setelah pembaruan
        })
        .catch(err => console.error(err));
    });

    function viewDetails(contactId) {
        // Ganti alert dengan modal untuk menampilkan detail
        // Di sini, Anda bisa menambahkan logika untuk mengambil data kontak berdasarkan ID
        fetch(`/contact/details/${contactId}`)
        .then(response => response.json())
        .then(contact => {
            const detailModal = document.createElement('div');
            detailModal.style.position = 'fixed';
            detailModal.style.top = '50%';
            detailModal.style.left = '50%';
            detailModal.style.transform = 'translate(-50%, -50%)';
            detailModal.style.backgroundColor = 'white';
            detailModal.style.padding = '20px';
            detailModal.style.boxShadow = '0 2px 15px rgba(0, 0, 0, 0.3)';
            detailModal.innerHTML = `
                <h2>${contact.name}</h2>
                <p>Email: ${contact.email}</p>
                <button onclick="this.parentElement.remove();">Close</button>
            `;
            document.body.appendChild(detailModal);
        })
        .catch(err => console.error(err));
    }
</script>

<!-- Modal untuk Update Kontak -->
<div id="updateModal" class="modal" style="display: none;">
    <div class="modal-content">
        <span id="closeUpdateModal" class="close">&times;</span>
        <h2>Update Contact</h2>
        <form id="updateContactForm">
            <input type="hidden" id="updateContactId">
            <label for="updateContactName">Name:</label>
            <input type="text" id="updateContactName" required>
            <label for="updateContactEmail">Email:</label>
            <input type="email" id="updateContactEmail" required>
            <button type="submit">Submit</button>
        </form>
    </div>
</div>

<!-- Modal Konfirmasi -->
<div id="confirmModal" class="modal" style="display: none;">
    <div class="modal-content">
        <h2>Konfirmasi Update</h2>
        <p>Apakah Anda yakin ingin memperbarui kontak ini?</p>
        <button id="confirmUpdateButton">Ya</button>
        <button id="cancelUpdateButton">Tidak</button>
    </div>
</div>
